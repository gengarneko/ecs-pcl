    "@ecs-pcl/tsconfig": "workspace:^",
    "@types/react": "^18.3.12",
    "tsup": "^8.3.5",
    "typescript": "5.5.4",
    "vitest": "^2.1.3"
  },
  "peerDependencies": {
    "@preact/signals-core": "^1.8.0",
    "react": "^18.3.1"
  }
